apiVersion: v1
kind: Service
metadata:
  name: nginx-np
  labels:
    purpose: Service-np-demo

spec:
  selector:
    purpose: Service-np-demo
    project: roboshop
    environment: dev
  ports:
    - protocol: TCP
      port: 80 # service port
      targetPort: 89 # container port

---
apiVersion: v1
kind: Pod
metadata:
  name: nginx-np
  labels:
    purpose: Service-np-demo
    project: roboshop
    environment: dev

spec:
  containers:
    - name: naginx
      image: nginx